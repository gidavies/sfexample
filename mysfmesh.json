{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the resources (e.g. westus, eastus, westeurope)."
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-09-01-preview",
      "name": "gdsfNetwork",
      "type": "Microsoft.ServiceFabricMesh/networks",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "properties": {
        "kind": "Local",
        "description": "Service Fabric Mesh Network for GD SF Mesh Example.",
        "networkAddressPrefix": "10.0.0.0/24"
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "gdsfGateway",
      "type": "Microsoft.ServiceFabricMesh/gateways",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/networks/gdsfNetwork"
      ],
      "properties": {
        "description": "Service Fabric Mesh Gateway for GD SF Mesh Example.",
        "sourceNetwork": {
          "name": "Open"
        },
        "destinationNetwork": {
          "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'gdsfNetwork')]"
        },
        "tcp": [
          {
            "name": "web",
            "port": 80,
            "destination": {
              "applicationName": "gdsfApp",
              "serviceName": "gdsfService",
              "endpointName": "gdsfListener"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "gdsfApp",
      "type": "Microsoft.ServiceFabricMesh/applications",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/networks/gdsfNetwork"
      ],
      "properties": {
        "description": "Service Fabric Mesh GD Application.",
        "services": [
          {
            "type": "Microsoft.ServiceFabricMesh/services",
            "name": "gdsfService",
            "properties": {
              "description": "Service Fabric Mesh GD Service.",
              "osType": "linux",
              "codePackages": [
                {
                  "name": "gdsfCode",
                  "image": "gdavi/contwebapp",
                  "endpoints": [
                    {
                      "name": "gdsfListener",
                      "port": "80"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "1",
                      "memoryInGB": "1"
                    }
                  }
                }
              ],
              "replicaCount": "1",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'gdsfNetwork')]",
                  "endpointRefs": [
                    {
                      "name": "gdsfListener"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "publicIPAddress": {
      "value": "[reference('gdsfGateway').ipAddress]",
      "type": "string"
    }
  }
}
